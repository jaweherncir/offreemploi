<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=" Details Emploi"
        android:background="@drawable/top_drawable"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Nom"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingStart="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_edit"
        android:gravity="center"
        android:id="@+id/txtname"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Adresse Postal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingStart="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_edit"
        android:gravity="center"
        android:id="@+id/txtadrPostal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Categorie"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingStart="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_edit"
        android:gravity="center"
        android:id="@+id/txtcategorieedit"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Description Emploi"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingStart="32dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_edit"
        android:gravity="center"
        android:id="@+id/txtDescriptionedit"/>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Numéro Téléphone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:paddingStart="32dp"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_edit"
        android:gravity="center"
        android:id="@+id/txtNumteledit"/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Modifier"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="10dp"
    android:textSize="21dp"
    android:textAllCaps="false"
    android:backgroundTint="#FFC107"
    android:gravity="center"
    android:id="@+id/btnupdate"/>




















</LinearLayout>